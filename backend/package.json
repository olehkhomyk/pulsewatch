{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "engines": { "node": ">=22" },
  "scripts": {
    "dev": "concurrently -k \"tsc -w\" \"nodemon -q dist/index.js\"",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
